<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>kr.co.heartmedia</groupId>
  <artifactId>SmartRA_Gangjin</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>war</packaging>
  <name>SmartRA_Gangjin</name>

  	<properties>
		<java-version>1.8</java-version>
	    <spring-framework.version>4.3.22.RELEASE</spring-framework.version>
		<egovframework.rte.version>3.9.0</egovframework.rte.version>
		<m2eclipse.wtp.contextRoot>/</m2eclipse.wtp.contextRoot>
	</properties>

	<repositories>
		<repository>
			<id>mvn2</id>
			<url>http://repo1.maven.org/maven2/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>egovframe</id>
			<url>http://maven.egovframe.kr:8080/maven/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>oracle</id>
			<name>ORACLE JDBC Repository</name>
			<url>http://maven.jahia.org/maven2</url>
		</repository>
	</repositories>

	<!-- Build Profiles -->
	<profiles>
    	<profile>
    		<id>local</id>
    		<activation>
    			<activeByDefault>true</activeByDefault>
    		</activation>
    		<properties>
    			<environment>local</environment>
    		</properties>
    	</profile>
    	<profile>
			<id>dev</id>
			<properties>
    			<environment>dev</environment>
    		</properties>
		</profile>
		<profile>
			<id>live</id>
			<properties>
    			<environment>live</environment>
    		</properties>
		</profile>
	</profiles>

	<dependencies>
